{
  "name": "vuex-talk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run data-update && npm run serve",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "talk:watch": "nodemon --watch talk ./talk/slides.md",
    "data-update": "wget 'https://api.coinmarketcap.com/v2/ticker/?structure=array' -O ./shared/coins.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/vue-fontawesome": "^0.1.1",
    "is-promise": "^2.1.0",
    "npm": "^6.4.1",
    "tuxi": "^0.2.1",
    "vue": "^2.5.17",
    "vue-currency-filter": "^2.3.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.3",
    "@vue/cli-plugin-eslint": "^3.0.3",
    "@vue/cli-service": "^3.0.3",
    "@vue/eslint-config-prettier": "^3.0.3",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "nodemonConfig": {
    "execMap": {
      "md": "pandoc -t revealjs -s -o talk/slides.html -V revealjs-url=reveal.js -V theme=simple"
    }
  }
}
